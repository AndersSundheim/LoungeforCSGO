<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="#8ee4dfe1">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="#a0a0a0" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/behindimage" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="Team 1"
        android:id="@+id/team_1_image"
        android:layout_gravity="right|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="7.5dp"
        android:layout_marginTop="7.5dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="Team 2"
        android:id="@+id/team_2_image"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7.5dp"
        android:layout_marginRight="7.5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:text="Team 2"
        android:id="@+id/betted_team_2"
        android:layout_gravity="right|bottom"
        android:textAlignment="center"
        android:layout_alignTop="@+id/betted_team_1"
        android:layout_alignRight="@+id/team_2_image"
        android:layout_alignEnd="@+id/team_2_image"
        android:layout_alignBottom="@+id/betted_team_1"
        android:layout_alignLeft="@+id/team_2_image"
        android:layout_alignStart="@+id/team_2_image"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XX%"
        android:id="@+id/betted_odds_1"
        android:layout_below="@+id/betted_time"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hours from now"
        android:id="@+id/betted_time"
        android:layout_alignTop="@+id/team_2_image"
        android:layout_toRightOf="@+id/betted_odds_1"
        android:layout_toEndOf="@+id/betted_odds_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vs."
        android:id="@+id/betted_vs"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/betted_odds_1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XX%"
        android:id="@+id/betted_odds_2"
        android:layout_below="@+id/betted_time"
        android:layout_toLeftOf="@+id/imageView9"
        android:layout_toStartOf="@+id/imageView9"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:text="Team 1"
        android:id="@+id/betted_team_1"
        android:layout_gravity="left|bottom"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/imageView8"
        android:layout_alignRight="@+id/team_1_image"
        android:layout_alignEnd="@+id/team_1_image"
        android:layout_alignLeft="@+id/team_1_image"
        android:layout_alignStart="@+id/team_1_image" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/betted_team_1"
        android:id="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="49.5dp"
        android:layout_height="43dp"
        android:id="@+id/betted_item_1"
        android:layout_below="@+id/space"
        android:layout_alignRight="@+id/betted_odds_1"
        android:layout_alignEnd="@+id/betted_odds_1"
        android:layout_toStartOf="@+id/betted_item_2"
        android:layout_marginRight="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <ImageView
            android:src="#00ffffff"
            android:layout_width="49.5dp"
            android:layout_height="33dp"
            android:id="@+id/picture"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wear"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="49.5dp"
            android:layout_height="10dp"
            android:id="@+id/price"
            android:background="#00ffffff"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/picture"
            android:textSize="8dp" />

        <Button
            android:layout_width="49.5dp"
            android:layout_height="43dp"
            android:id="@+id/selectButton"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="49.5dp"
        android:layout_height="43dp"
        android:id="@+id/betted_item_2"
        android:layout_below="@+id/space"
        android:layout_toLeftOf="@+id/betted_vs"
        android:layout_toStartOf="@+id/betted_vs">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <ImageView
            android:src="#00ffffff"
            android:layout_width="49.5dp"
            android:layout_height="33dp"
            android:id="@+id/picture"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wear"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="49.5dp"
            android:layout_height="10dp"
            android:id="@+id/price"
            android:background="#00ffffff"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/picture"
            android:textSize="8dp" />

        <Button
            android:layout_width="49.5dp"
            android:layout_height="43dp"
            android:id="@+id/selectButton"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="49.5dp"
        android:layout_height="43dp"
        android:id="@+id/betted_item_3"
        android:layout_below="@+id/space"
        android:layout_toRightOf="@+id/betted_vs"
        android:layout_toEndOf="@+id/betted_vs">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <ImageView
            android:src="#00ffffff"
            android:layout_width="49.5dp"
            android:layout_height="33dp"
            android:id="@+id/picture"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wear"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="49.5dp"
            android:layout_height="10dp"
            android:id="@+id/price"
            android:background="#00ffffff"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/picture"
            android:textSize="8dp" />

        <Button
            android:layout_width="49.5dp"
            android:layout_height="43dp"
            android:id="@+id/selectButton"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="49.5dp"
        android:layout_height="43dp"
        android:id="@+id/betted_item_4"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/space"
        android:layout_toRightOf="@+id/betted_item_3"
        android:layout_toEndOf="@+id/betted_item_3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:src="#00ffffff"
        android:layout_width="49.5dp"
        android:layout_height="33dp"
        android:id="@+id/picture"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wear"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="49.5dp"
        android:layout_height="10dp"
        android:id="@+id/price"
        android:background="#00ffffff"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/picture"
        android:textSize="8dp" />

        <Button
            android:layout_width="49.5dp"
            android:layout_height="43dp"
            android:id="@+id/selectButton"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/space2"
        android:layout_below="@+id/betted_item_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backpack"
        android:id="@+id/switch_backpack"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/space2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Returns"
        android:id="@+id/switch_returns"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_team1"
        android:layout_below="@+id/betted_item_1"
        android:layout_alignLeft="@+id/betted_team_1"
        android:layout_alignStart="@+id/betted_team_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_team2"
        android:layout_alignTop="@+id/return_team1"
        android:layout_alignLeft="@+id/betted_team_2"
        android:layout_alignStart="@+id/betted_team_2" />

    <ViewSwitcher
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewSwitcher"
        android:layout_below="@+id/switch_backpack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="center">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <GridLayout
            android:id="@+id/returns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="center_horizontal"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:orientation="horizontal"></GridLayout>
        </ScrollView>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <GridLayout
            android:id="@+id/backpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="center_horizontal"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:orientation="horizontal"/>
        </ScrollView>
    </ViewSwitcher>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Bet"
        android:id="@+id/placebet"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true"
        android:textSize="10dp"
        android:layout_below="@+id/betted_odds_1" />

    <Button
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:id="@+id/team1_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7.5dp"
        android:layout_marginTop="7.5dp"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:id="@+id/team2_button"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7.5dp"
        android:layout_marginTop="7.5dp" />


</RelativeLayout>